---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="container">
    <div>
      <h1>- 500 -</h1>
      <h2>サーバーエラーが発生しました。</h2>
      <a class="link" href="/"> ホームに戻る </a>
    </div>
  </div>
</Layout>

<style>
  .container {
    width: 100%;
    height: 100lvh;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  h1 {
    font-size: var(--lg-font-size);
    text-align: center;
    margin: 0 0 10px 0;
  }

  h2 {
    font-size: var(--base-font-size);
    text-align: center;
    margin: 0 0 64px 0;
  }

  .link {
    width: fit-content;
    padding: 10px 30px;
    margin: 0 auto;
    color: #000000;
    font-size: var(--sm-font-size);
    text-align: center;
    border-radius: 10px;
    display: block;
    position: relative;
    z-index: 2;
    cursor: pointer;
    background-color: #c69c6d;
  }
</style>
