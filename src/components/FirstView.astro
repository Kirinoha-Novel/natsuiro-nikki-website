---
import { Picture } from 'astro:assets';
import mobileImage from '../assets/mobile.png';
import pcImage from '../assets/pc.webp';
import logoImage from '../assets/logo.png';
---

<div class="first-view-container">
  <div class="key-visual-container">
    <!-- PC Version -->
    <div class="key-visual-pc">
      <Picture
        src={pcImage}
        formats={['webp', 'avif']}
        alt="Key Visual"
        layout="full-width"
        width={pcImage.width}
        height={pcImage.height}
        priority
      />
      <div class="caption">
        <Picture
          src={logoImage}
          formats={['webp', 'avif']}
          alt="Key Visual"
          layout="full-width"
          width={logoImage.width}
          height={logoImage.height}
          priority
        />
      </div>
      <div class="blur-box"></div>
    </div>
    <!-- Mobile Version -->
    <div class="key-visual-mobile">
      <Picture
        src={mobileImage}
        formats={['webp', 'avif']}
        alt="Key Visual"
        layout="full-width"
        width={mobileImage.width}
        height={mobileImage.height}
        priority
      />
      <!-- <div class="caption">
        <h1>なついろにっき。</h1>
        <p>2025年8月8日 発売予定</p>
      </div> -->
    </div>
  </div>
</div>

<style>
  .key-visual-container {
    height: 100lvh;
    display: flex;
    align-items: flex-start;
    overflow: hidden;
  }

  /* PC Version */
  .key-visual-pc .caption {
    position: absolute;
    bottom: 100px;
    left: 20px;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    z-index: 2;
    width: 800px;
  }

  .key-visual-pc .blur-box {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 300px;
    background: linear-gradient(to bottom, rgba(255, 251, 242, 0) 0%, rgba(255, 251, 242, 1) 100%);
    z-index: 1;
  }

  /* Mobile Version */
  .key-visual-mobile img {
    min-height: 100lvh;
    object-fit: cover;
  }

