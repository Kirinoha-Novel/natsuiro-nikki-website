---
import { Picture } from 'astro:assets';
import mobileImage from '../assets/mobile.webp';
import pcImage from '../assets/pc.webp';
import logoImage from '../assets/logo.webp';
---

<div class="first-view-container">
  <div class="key-visual-container">
    <!-- PC Version -->
    <div class="key-visual-pc">
      <Picture
        src={pcImage}
        formats={['webp', 'avif']}
        fallbackFormat="jpeg"
        alt="Key Visual"
        layout="full-width"
        width={pcImage.width}
        height={pcImage.height}
        priority
      />
      <div class="logo">
        <Picture
          src={logoImage}
          formats={['webp', 'avif']}
          fallbackFormat="jpeg"
          alt="Key Visual"
          layout="full-width"
          width={logoImage.width}
          height={logoImage.height}
          priority
        />
      </div>
      <div class="blur-box"></div>
    </div>
    <!-- Mobile Version -->
    <div class="key-visual-mobile">
      <Picture
        src={mobileImage}
        class={'key-visual-mobile-img'}
        formats={['webp', 'avif']}
        alt="Key Visual"
        layout="full-width"
        width={mobileImage.width}
        height={mobileImage.height}
        priority
      />
      <div class="logo">
        <Picture
          src={logoImage}
          formats={['webp', 'avif']}
          alt="Key Visual"
          layout="full-width"
          width={logoImage.width}
          height={logoImage.height}
          priority
        />
      </div>
    </div>
  </div>
</div>

<style>
  .key-visual-container {
    height: 100lvh;
    display: flex;
    align-items: flex-start;
    overflow: hidden;
  }

  /* PC Version */
  .key-visual-pc .logo {
    position: absolute;
    bottom: 20px;
    left: 20px;
    color: #fff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    z-index: 2;
  }

  /* Logo Image Control */
  @media screen and (max-width: 1200px) {
    .key-visual-pc .logo {
      width: 60vw;
    }
  }
  @media screen and (max-width: 1400px) and (min-width: 1201px) {
    .key-visual-pc .logo {
      width: 55vw;
    }
  }
  @media screen and (min-width: 1401px) {
    .key-visual-pc .logo {
      width: 50vw;
    }
  }

  .key-visual-pc .blur-box {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 300px;
    background: linear-gradient(to bottom, rgba(255, 251, 242, 0) 0%, rgba(255, 251, 242, 1) 100%);
    z-index: 1;
  }

  /* Mobile Version */
  .key-visual-mobile .key-visual-mobile-img {
    min-height: 100lvh;
    object-fit: cover;
  }

  .key-visual-mobile .logo {
    position: absolute;
    top: 75%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    z-index: 2;
    width: 100%;
  }

  /* Logo Image Control */
  @media screen and (max-width: 700px) {
    .key-visual-mobile .logo {
      width: 100%;
    }
  }
  @media screen and (max-width: 930px) and (min-width: 701px) {
    .key-visual-mobile .logo {
      width: 80%;
    }
  }
  @media screen and (min-width: 931px) {
    .key-visual-mobile .logo {
      width: 65%;
    }
  }

  /* First View Image Control */
  @media screen and (max-aspect-ratio: 1/1) {
    .key-visual-pc {
      display: none;
    }
  }
  @media screen and (min-aspect-ratio: 1/1) {
    .key-visual-mobile {
      display: none;
    }
  }
</style>
